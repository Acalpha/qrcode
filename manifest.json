{
	"name": "婚礼时光运营工具",
	"version": "0.12.1",
	"description": "婚礼时光运营工具",
	"manifest_version": 2,
	"icons": {
		"48": "images/icon48.png"
	},
	"background": {
		"page": "background.html"
	},
	"options_page": "options.html",
	"content_scripts": [
	    {
	      "matches": ["http://*/*","https://*/*"],
	      "js": ["/app/jquery.js", "/app/topic/init.js", "/app/publish/init.js"],
	      "css": ["/app/topic/main.css"],
	      "run_at": "document_idle"
	    }
	  ],
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"notifications"
	],
	"browser_action": {
		"default_title": "",
		"default_icon": "images/icon16.png",
		"default_popup": "popup.html"
	}
}